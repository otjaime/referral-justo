generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────

enum UserRole {
  USER
  ADMIN
}

enum RestaurantStatus {
  PENDING
  ACTIVE
  SUSPENDED
  CANCELLED
}

enum ReferralStatus {
  PENDING
  QUALIFIED
  REWARDED
  EXPIRED
}

enum BeneficiaryType {
  REFERRER
  REFERRED
}

enum RewardType {
  CREDITS
  DISCOUNT
  FEE_WAIVER
  CUSTOM
}

enum RewardStatus {
  PENDING
  ISSUED
  REDEEMED
  EXPIRED
}

enum PipelineStatus {
  PENDING
  QUALIFIED
  DEMO_SCHEDULED
  MEETING_HELD
  WON
  LOST
  NO_SHOW
  NURTURE
  DEAD
}

enum PipelineEventType {
  STATUS_CHANGE
  NOTE
  SCORE_UPDATE
  CONTACT_ATTEMPT
  DEMO_SCHEDULED
  MEETING_HELD
  AUTO_QUALIFIED
}

// ─── Models ─────────────────────────────────────────

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  restaurants   Restaurant[]
  referralCodes ReferralCode[]
  rewards       Reward[]

  @@map("users")
}

model Restaurant {
  id        String           @id @default(uuid())
  name      String
  ownerId   String           @map("owner_id")
  status    RestaurantStatus @default(PENDING)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  // Expanded form fields (v2)
  city          String? @map("city")
  numLocations  Int?    @map("num_locations")
  currentPos    String? @map("current_pos")
  deliveryPct   Int?    @map("delivery_pct")
  ownerWhatsapp String? @map("owner_whatsapp")
  ownerEmail    String? @map("owner_email")

  owner    User      @relation(fields: [ownerId], references: [id])
  referral Referral?

  @@map("restaurants")
}

model ReferralCode {
  id             String    @id @default(uuid())
  code           String    @unique
  referrerUserId String    @map("referrer_user_id")
  createdAt      DateTime  @default(now()) @map("created_at")
  expiresAt      DateTime? @map("expires_at")
  maxUses        Int?      @map("max_uses")
  useCount       Int       @default(0) @map("use_count")

  referrer  User       @relation(fields: [referrerUserId], references: [id])
  referrals Referral[]

  @@map("referral_codes")
}

model Referral {
  id                   String         @id @default(uuid())
  referralCodeId       String         @map("referral_code_id")
  referredRestaurantId String         @unique @map("referred_restaurant_id")
  status               ReferralStatus @default(PENDING)
  createdAt            DateTime       @default(now()) @map("created_at")
  qualifiedAt          DateTime?      @map("qualified_at")
  rewardedAt           DateTime?      @map("rewarded_at")

  // Lead scoring (v2)
  scoreFit    Int?      @map("score_fit")
  scoreIntent Int?      @map("score_intent")
  scoreEngage Int?      @map("score_engage")
  scoreTotal  Int?      @map("score_total")
  scoredAt    DateTime? @map("scored_at")

  // Intent/engagement signals (v2)
  usedCalculator  Boolean @default(false) @map("used_calculator")
  usedDiagnostic  Boolean @default(false) @map("used_diagnostic")
  requestedDemo   Boolean @default(false) @map("requested_demo")
  fromMetaAd      Boolean @default(false) @map("from_meta_ad")
  respondedWa     Boolean @default(false) @map("responded_wa")
  openedMessages  Int     @default(0) @map("opened_messages")
  responseTimeMin Int?    @map("response_time_min")

  // Pipeline (v2)
  pipelineStatus  PipelineStatus @default(PENDING) @map("pipeline_status")
  demoScheduledAt DateTime?      @map("demo_scheduled_at")
  meetingHeldAt   DateTime?      @map("meeting_held_at")
  meetingOutcome  String?        @map("meeting_outcome")
  nurtureStage    Int?           @map("nurture_stage")
  nextActionAt    DateTime?      @map("next_action_at")
  notes           String?        @map("notes")

  // SLA tracking (v2)
  sdrContactedAt DateTime? @map("sdr_contacted_at")

  referralCode       ReferralCode    @relation(fields: [referralCodeId], references: [id])
  referredRestaurant Restaurant      @relation(fields: [referredRestaurantId], references: [id])
  rewards            Reward[]
  pipelineEvents     PipelineEvent[]

  @@map("referrals")
}

model PipelineEvent {
  id         String            @id @default(uuid())
  referralId String            @map("referral_id")
  eventType  PipelineEventType @map("event_type")
  fromStatus PipelineStatus?   @map("from_status")
  toStatus   PipelineStatus?   @map("to_status")
  note       String?
  createdBy  String?           @map("created_by")
  createdAt  DateTime          @default(now()) @map("created_at")

  referral Referral @relation(fields: [referralId], references: [id])

  @@map("pipeline_events")
}

model Reward {
  id              String          @id @default(uuid())
  referralId      String          @map("referral_id")
  beneficiaryId   String          @map("beneficiary_id")
  beneficiaryType BeneficiaryType @map("beneficiary_type")
  rewardType      RewardType      @map("reward_type")
  amount          Int?
  description     String?
  status          RewardStatus    @default(PENDING)
  issuedAt        DateTime?       @map("issued_at")
  redeemedAt      DateTime?       @map("redeemed_at")
  expiresAt       DateTime?       @map("expires_at")

  referral    Referral @relation(fields: [referralId], references: [id])
  beneficiary User     @relation(fields: [beneficiaryId], references: [id])

  @@map("rewards")
}
